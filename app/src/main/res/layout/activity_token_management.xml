<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#dcdcdc"
    tools:context=".activity.assistant.Assistant_TokenManagementActivity"
    >

    <!-- 토근 관리 화면 -->
    <TextView

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="40dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/skyblue_box"
        android:orientation="vertical"
        android:gravity="center"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="토큰 확인"
            android:textSize="30dp"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="25dp"
                android:text="현재 토큰 값 :"
                android:textAlignment="center"
                android:layout_marginTop="30dp"
                android:background="@android:color/transparent"
                android:layout_weight="0.5"
                android:textColor="@color/black"
                />

            <!-- 토큰 값 조회해서 넣기-->
            <EditText
                android:id="@+id/token"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="25dp"
                android:textAlignment="center"
                android:layout_marginTop="30dp"
                android:background="@android:color/transparent"
                android:layout_weight="0.5"
                android:textColor="@color/black"
                android:textStyle="bold"
                />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tokenChangeBtn"
                android:layout_margin="20dp"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="40dp"
                android:background="@drawable/white_blue_btn"
                android:text="변경"
                android:textSize="25dp"
                android:textColor="@color/black"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tokenOkBtn"
                android:layout_margin="20dp"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="40dp"
                android:background="@drawable/white_blue_btn"
                android:text="확인"
                android:textSize="25dp"
                android:textColor="@color/black"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>