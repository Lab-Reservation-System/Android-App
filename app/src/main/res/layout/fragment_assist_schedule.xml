<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/assist_scheduleFragment">



    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="시간표 조회"
        android:textSize="40dp"

        android:gravity="center"
        android:background="@drawable/blue_title"
        android:textColor="@color/white"
        />

    <org.techtown.timetablelayout.CollegeTimeTableLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:background="@color/cell_backgroud_color"
        android:columnCount="6"
        android:rowCount="10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal"
        android:weightSum="1">
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/seminar_register_btn"
            android:layout_width="0dp"
            android:layout_weight="0.45"
            android:layout_height="50dp"
            android:text="세미나 등록"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/blue_title"
            android:textSize="20dp"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.1"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/regular_register_btn"
            android:layout_width="0dp"
            android:layout_weight="0.45"
            android:layout_height="50dp"
            android:text="정규수업 등록"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/blue_title"
            android:textSize="20dp"
            />

    </LinearLayout>



</LinearLayout>