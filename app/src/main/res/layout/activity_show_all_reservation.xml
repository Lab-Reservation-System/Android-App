<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/assist_reservationFragment"
    >

    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="전체 예약 내역 조회"
        android:textSize="30dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:background="@drawable/blue_title"
        android:textColor="@color/white"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="40dp"
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:id="@+id/datetext"
            android:layout_width="0dp"
            android:layout_weight="1.4"
            android:gravity="center"
            android:text="-"
            android:layout_height="30dp"
            android:background="@drawable/white_blue_btn"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:id="@+id/date"
            android:text="날짜선택"
            android:layout_height="match_parent"
            android:layout_weight="0.8"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/init"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="초기화"
            android:layout_weight="0.8"/>
    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        >
        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/blue_corner"
            android:weightSum="1"
            android:orientation="horizontal"
            android:stretchColumns="*"
            >

            <TableRow
                android:id="@+id/tableTitleRow"
                >
                <TextView
                    android:id="@+id/userName"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.25"
                    android:background="@drawable/blue_corner_gray"
                    android:text="이름"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    />
                <TextView
                    android:id="@+id/userId"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.25"
                    android:background="@drawable/blue_corner_gray"
                    android:text="학번"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    />

                <TextView
                    android:id="@+id/roomId"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.25"
                    android:background="@drawable/blue_corner_gray"
                    android:text="호실"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    />
                <TextView
                    android:id="@+id/seatNum"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.25"
                    android:background="@drawable/blue_corner_gray"
                    android:text="좌석"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    />
                <TextView
                    android:id="@+id/useTime"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.25"
                    android:background="@drawable/blue_corner_gray"
                    android:text="시간"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    />

                <TextView
                    android:id="@+id/permissionState"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.25"
                    android:background="@drawable/blue_corner_gray"
                    android:text="승인 상태"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    />


            </TableRow>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/table_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
            </androidx.recyclerview.widget.RecyclerView>
        </TableLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <View
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#9A9A9A"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/back_btn"
        android:layout_width="match_parent"
        android:layout_margin="30dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="뒤로 가기"
        android:textColor="@color/white"
        android:background="@drawable/blue_corner_gray"
        android:textSize="20dp"
        />
</LinearLayout>