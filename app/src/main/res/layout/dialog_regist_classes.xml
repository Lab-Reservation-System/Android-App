<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/white_blue_btn"

    >

    <!-- 조교가 정규 수업 등록하는 화면 -->
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="정규 수업 등록"
        android:textSize="30dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"

        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >


        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.4"
            android:text="수업명"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/className"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:singleLine="true"
            android:textAlignment="center"
            android:background="@drawable/blue_corner"
            android:layout_weight="0.6"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
    </LinearLayout>



    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.4"
            android:text="교수명"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText

            android:id="@+id/professorName"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:singleLine="true"
            android:textAlignment="center"
            android:background="@drawable/blue_corner"
            android:layout_weight="0.6"
            android:textColor="@color/black"
            android:textStyle="bold"
            />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.4"
            android:text="실습실"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/labNumber"

            android:layout_width="0dp"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:layout_weight="0.5"
            android:textColor="@color/black"
            android:background="@drawable/blue_corner"
            android:textAlignment="center"
            android:enabled="false"
            />

        <!-- 실습실 선택 -->
        <Spinner
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:id="@+id/labSpinner"
            android:layout_weight="0.1"
            android:layout_marginLeft="0dp"
            android:background="@drawable/ic_more"


            />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:text="요일"
            android:gravity="center"
            android:layout_weight="0.4"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/yoil"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:layout_weight="0.5"
            android:textColor="@color/black"
            android:background="@drawable/blue_corner"
            android:textAlignment="center"
            android:enabled="false"
            />

        <!-- 실습실 선택 -->
        <Spinner
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:id="@+id/daySpinner"
            android:layout_weight="0.1"

            android:background="@drawable/ic_more"


            />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:text="시작 시간"
            android:gravity="center"
            android:layout_weight="0.4"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/sTime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:background="@drawable/blue_corner"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:text="종료 시간"
            android:gravity="center"
            android:layout_weight="0.4"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/eTime"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:layout_weight="0.6"
            android:textColor="@color/black"
            android:background="@drawable/blue_corner"
            android:gravity="center"
            />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"

        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/registerCancleBtn"
            android:layout_width="0dp"
            android:layout_height="40dp"


            android:text="취소"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_weight="0.46"
            android:background="#F30D15"
            />
        <View
            android:layout_width="0dp"
            android:layout_weight="0.08"
            android:layout_height="match_parent"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/registerBtn"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="등록"
            android:textStyle="bold"
            android:layout_weight="0.46"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:background="#1478FF"

            />




    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

</LinearLayout>